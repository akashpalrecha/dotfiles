export EDITOR=vim

mkcd(){
mkdir -p "$1" && cd "$1"
}
copy(){
"$1" | pbcopy
}

cds(){
	cd "$1"
	bash setup.sh
}

re-source(){
    source ~/.bashrc
	source ~/.zshrc
}

sql_start(){
	pg_ctl -D /usr/local/var/postgres start
}

sql_stop(){
	pg_ctl -D /usr/local/var/postgres stop
}

marco (){
        cwd=$(pwd)
}

polo (){
        cd $cwd
}

harvard (){
ssh -L ${1}:localhost:${1} apalrecha@login.rc.fas.harvard.edu;
}

alias loadconda='module load Anaconda3/5.0.1-fasrc02'

alias loadcuda='module load cuda/9.0-fasrc02 cudnn/7.0_cuda9.0-fasrc01'

gpujob() { srun --pty -p cox -t 0-${1}:${2} --mem ${3} --gres=gpu:1 /bin/bash; }
cpujob() { srun --pty -p cox -t 0-${1}:${2} --mem ${3} -n ${4} -N 1 /bin/bash; }

fwport() { ssh -L ${1}:localhost:${1} ${2}; }

